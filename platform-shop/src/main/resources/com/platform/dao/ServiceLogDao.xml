<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.ServiceLogDao">

    <resultMap type="com.platform.entity.ServiceLogEntity" id="serviceLogMap">
        <result property="id" column="id"/>
        <result property="serviceId" column="service_id"/>
        <result property="userId" column="user_id"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

	<select id="queryObject" resultType="com.platform.entity.ServiceLogEntity">
		select
			`id`,
			`service_id`,
			`user_id`,
			`create_time`
		from nideshop_service_log
		where id = #{id}
	</select>

	<select id="queryList" resultType="com.platform.entity.ServiceLogEntity">
		select
    		`id`,
    		`service_id`,
    		`user_id`,
    		`create_time`
		from nideshop_service_log
		WHERE 1=1
		<if test="name != null and name.trim() != ''">
			AND name LIKE concat('%',#{name},'%')
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from nideshop_service_log
		WHERE 1=1
        <if test="name != null and name.trim() != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
	</select>
	 
	<insert id="save" parameterType="com.platform.entity.ServiceLogEntity" useGeneratedKeys="true" keyProperty="id">
		insert into nideshop_service_log(
			`service_id`,
			`user_id`,
			`create_time`)
		values(
			#{serviceId},
			#{userId},
			#{createTime})
	</insert>
	 
	<update id="update" parameterType="com.platform.entity.ServiceLogEntity">
		update nideshop_service_log 
		<set>
			<if test="serviceId != null">`service_id` = #{serviceId}, </if>
			<if test="userId != null">`user_id` = #{userId}, </if>
			<if test="createTime != null">`create_time` = #{createTime}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from nideshop_service_log where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from nideshop_service_log where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>